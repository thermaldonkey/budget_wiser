<div id="forgot_password" class="jumbotron">
  <h1>Forgot your password?</h1>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.label :email %><br />
      <div class="input-group input-group-sm">
        <span class="input-group-addon"></span>
        <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "forgetfuldonkey@example.com" %>
      </div>
    </div>

    <div><%= f.submit "Send me reset password instructions", class: "btn btn-primary" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
